
<h2 class="col-sm-offset-1">Add a New Product</h2>
  <div class="form">
    <%= form_for(:session, url: login_path)  do |f| %>
      <div class="form-group col-sm-offset-2">
        <%= f.label :name %>
        <%= f.text_field :name %>
      </div>

      <div class="form-group col-sm-offset-2">
        <%= f.label :description %>
        <%= f.text_field :description %>
      </div>

      <div class="form-group col-sm-offset-2">
        <%= f.label :price %>
        <%= f.text_field :price %>
      </div>

      <div class="form-group col-sm-offset-2">
        <%= f.label :photo_url %>
        <%= f.file_field :photo_url %>
      </div>

      <div class="form-group col-sm-offset-2">
        <%= f.label :inventory %>
        <%= f.text_field :inventory %>
      </div>

      <div class="form-group col-sm-offset-2">
        <%= f.label :active %>
        <%= f.check_box :active %>
      </div>

      <div class="form-group col-sm-offset-1">
        <%= f.submit "Add Product", id: session[:user_id], class: "btn btn-primary col-sm-2" %>
      </div>
    <% end %>
  </div>
