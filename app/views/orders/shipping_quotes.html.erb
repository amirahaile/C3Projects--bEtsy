<div class="row no-jumbo form-header">
  <div class = "col-md-4 col-md-offset-4">
      <h1> <%= "#{params[:shipper].upcase}" %> Shipping Quotes</h1>
  </div>
</div>

<div class="col-md-8 no-float center-block">
  <%= form_for @order do |f| %>
    <% @parsed_responses.each do |service| %>
      <%= fields_for :service do |ff| %>
        <%= ff.hidden_field :rate, :value => service[1] %>
        <%= ff.radio_button :name, "#{service[0]}" %>
        <%= ff.label :name, "#{service[0]} â€“ #{usd_convert(service[1])}" %>
      <% end %>
      <br>
    <% end %>

    <%= f.hidden_field :shipper, :value => params[:shipper] %>

    <!-- TODO: Assign rate value to @order -->

    <% if params[:shipper] == 'usps' %>
      <!-- not a link b/c the current selection needs to be saved -->
      <%= hidden_field_tag :shipper, 'ups' %>
      <%= f.submit "More Quotes", class: 'btn btn-default' %>
    <% else %>
      <%= hidden_field_tag :shipper, 'none' %>
    <% end %>

    <%= f.submit "Checkout", class: 'btn btn-primary' %>
  <% end %>
</div>
