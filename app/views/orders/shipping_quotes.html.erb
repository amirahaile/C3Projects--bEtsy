<div class="row no-jumbo form-header">
  <div class = "col-md-4 col-md-offset-4">
      <h1> <%= "#{params[:shipper].upcase}" %> Shipping Quotes</h1>
  </div>
</div>

<% if params[:shipper] == 'ups' %>
  <div class="alert alert-warning col-sm-8 no-float center-block">
    <p class="text-center">
    You've currently selected <%= params[:shipper].upcase %>'s <strong><%= @order.service %></strong> for <strong><%= usd_convert(@order.rate) %></strong>.
    </p>
  </div>
<% end %>

<div class="col-md-8 no-float center-block">
  <table class="table table-hover">
    <tr>
      <th>
      </th>
      <th>
        Service
      </th>
      <th class="text-center">
        Cost
      </th>
      <% if !@delivery.nil? %>
      <th class="text-center">
        Delivery Guarantee
      </th>
      <th class="text-center">
        Delivery Time
      </th>
      <% end %>
    </tr>

    <%= form_for @order do |f| %>

      <% count = 0 %>
      <% @services.each do |name, rate| %>

        <%= fields_for :service do |ff| %>
        <tr>
          <td>
            <%= ff.hidden_field :rate, :value => rate %>
            <%= ff.radio_button :service, "#{name}" %>
          </td>
          <td>
            <%= name %>
          </td>
          <td class="text-center">
            <%= usd_convert(rate) %>
          </td>
        <% end %>

        <% if !@delivery.nil? %>
          <td class="text-center">
            <!-- days for delivery -->
            <%= @delivery[count][0].nil? ? "N/A" : @delivery[count][0] %>
          </td>
          <td class="text-center">
            <!-- time of delivery -->
            <%= @delivery[count][1].nil? ? "N/A" : @delivery[count][1] %>
          </td>
        <% end %>

        <% count += 1 %>
        </tr>
      <% end %>
  </table>

    <%= f.hidden_field :shipper, :value => params[:shipper] %>

  <br>
    <% if params[:shipper] == 'usps' %>
      <!-- not a link b/c the current selection needs to be saved -->
      <%= hidden_field_tag :shipper, 'ups' %>
      <%= f.submit "More Quotes", class: 'btn btn-default' %>
    <% else %>
      <%= hidden_field_tag :shipper, 'none' %>
    <% end %>

    <%= f.submit "Checkout", class: 'btn btn-primary' %>
  <% end %>
  </table>
</div>
