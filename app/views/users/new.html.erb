<h3>SIGN UP!</h3>
<% if flash.now[:error] %>
  <div>
    <%= flash.now[:error] %>
  </div>
<% end %>

<%= form_for @user, method: :post, class: "user" do |f| %>

  <fieldset>
    <div class="form-group">
    <%= f.label :username %>
    <%= f.text_field :username, class: "form-control" %>
    <p class="text-field-error"><%= flash.now[:username_error] %></p>

    <%= f.label :email %>
    <%= f.text_field :email, class: "form-control" %>
    <p class="text-field-error"><%= flash.now[:email_error] %></p>

    <%= f.label :password %>
    <%= f.text_field :password, class: "form-control" %>
    <p class="text-field-error"><%= flash.now[:password_error] %></p>

    <%= f.label :password_confirmation, "Password Confirmation" %>
    <%= f.text_field :password_confirmation, class: "form-control" %>
    <p class="text-field-error"><%= flash.now[:password_confirmation_error] %></p>
    </div>
  </fieldset>

  <%= f.submit "Create", class: "btn btn-success" %>

<% end %>
